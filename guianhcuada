from turtle import*
shape("turtle")
color("blue")
speed(-1)

fillcolor("red")
begin_fill()
for i in range(3):
    forward(100)
    left(120)
end_fill()


for i in range(4):
    forward(100)
    left(90)

fillcolor("red")
begin_fill()
for i in range(5):
    forward(100)
    left(72)

end_fill()

for i in range(6):
    forward(100)
    left(60)
    
mainloop()
